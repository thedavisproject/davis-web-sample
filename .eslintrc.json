{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "valid-jsdoc": [
            "warn"
        ],
        "no-console": 0,
        "no-unused-vars": [
            "warn", { 
                "vars": "all",
                "varsIgnorePattern": "[iI]gnored",
                "argsIgnorePattern": "[iI]gnored",
                "args": "after-used"
            }
        ]
    }
}
